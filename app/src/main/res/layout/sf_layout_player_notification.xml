<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <ImageView
        android:id="@+id/iv_music_cover"
        android:layout_width="70dp"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/music_info_rl"
        android:layout_width="60dp"
        android:padding="8dp"
        android:layout_toEndOf="@+id/iv_music_cover"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_music_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="童话镇"
                android:maxLines="1"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="陈一发儿"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:textColor="#9000"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/music_info_rl">

        <ImageView
            android:id="@+id/btn_pre_music"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_pre_music"/>

        <ImageView
            android:id="@+id/btn_play_pause"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_notification_player_play"/>

        <ImageView
            android:id="@+id/btn_next_music"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_next_music"/>

        <ImageView
            android:id="@+id/btn_destroy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/notification_close"/>
    </LinearLayout>
</RelativeLayout>